@page "/tour/{id:int}"
@using VirtualTourBlazor.Models
@using VirtualTourBlazor.Services
@using Microsoft.JSInterop
@inject ITourService TourService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<PageTitle>Тур - @tour?.Name</PageTitle>

@if (tour == null)
{
        <div class="container py-5 text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Загрузка...</span>
            </div>
            <p class="mt-3">Загрузка тура...</p>
        </div>
}
else
{
        <div class="container-fluid px-0">
            <!-- Заголовок тура -->
            <div class="bg-primary text-white py-4">
                <div class="container">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a href="/tours" class="text-white text-decoration-none">Туры</a>
                            </li>
                            <li class="breadcrumb-item active text-white" aria-current="page">@tour.Name</li>
                        </ol>
                    </nav>

                    <div class="d-flex justify-content-between align-items-start mt-3">
                        <div>
                            <h1 class="display-6 fw-bold mb-2">@tour.Name</h1>
                            <p class="lead mb-0 opacity-75">@tour.Description</p>
                        </div>
                        <div class="text-end">
                            <div class="badge bg-light text-primary fs-6 px-3 py-2 mb-2">
                                <i class="bi bi-star-fill me-1"></i> @tour.AverageRating.ToString("F1")
                                <small class="opacity-75">(@tour.TotalReviews отзывов)</small>
                            </div>
                            <br>
                            <a href="@($"/tour/edit/{tour.Id}")" class="btn btn-light btn-sm">
                                <i class="bi bi-pencil me-1"></i> Редактировать
                            </a>
                            <button class="btn btn-danger btn-sm ms-2" @onclick="ShowDeleteConfirmation">
                                <i class="bi bi-trash me-1"></i> Удалить тур
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="container py-4">
                <div class="row">
                    <!-- Левая колонка - информация -->
                    <div class="col-lg-4 mb-4">
                        <!-- Информация о гиде -->
                        <div class="card shadow-sm mb-4">
                            <div class="card-header bg-transparent">
                                <h5 class="mb-0">
                                    <i class="bi bi-person-badge me-2"></i> Гид
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                        <i class="bi bi-person fs-4 text-primary"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-1 fw-bold">@tour.Guide.Name</h6>
                                        <small class="text-muted">@tour.Guide.Email</small>
                                    </div>
                                </div>
                                <p class="mb-0">@tour.Guide.Bio</p>
                            @if (tour.Guide.Id == 42)
                            {
                                        <div class="alert alert-warning mt-3 mb-0 py-2 small" role="alert">
                                            <i class="bi bi-info-circle me-1"></i>
                                            <strong>Особый гид!</strong> Знает ответ на Главный Вопрос жизни, Вселенной и всего такого.
                                        </div>
                            }
                            </div>
                        </div>

                        <!-- Список мест -->
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-geo-alt me-2"></i> Места (@tour.Places.Count)
                                </h5>
                                <span class="badge bg-primary">Всего: @tour.Places.Count</span>
                            </div>
                            <div class="card-body p-0">
                                <div class="list-group list-group-flush">
                                @foreach (var place in tour.Places)
                                {
                                            <div class="list-group-item border-0 py-3">
                                                <div class="d-flex justify-content-between align-items-start mb-1">
                                                    <h6 class="mb-0 fw-bold">@place.Name</h6>
                                                    <small class="text-muted">@place.Coordinates</small>
                                                </div>
                                                <p class="mb-2 small text-muted">@place.Description</p>
                                                <button class="btn btn-sm btn-outline-primary"
                                                        @onclick="() => FlyToLocation(place.Latitude, place.Longitude)">
                                                    <i class="bi bi-eye me-1"></i> Показать на карте
                                                </button>
                                            </div>
                                }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Правая колонка - карта -->
                    <div class="col-lg-8">
                        <div class="card shadow-sm h-100">
                            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-map me-2"></i> Карта маршрута
                                </h5>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-secondary" @onclick="ZoomIn">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="ZoomOut">
                                        <i class="bi bi-dash"></i>
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="ResetView">
                                        <i class="bi bi-fullscreen"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <!-- Контейнер для карты -->
                                <div id="tourMap" style="height: 500px; width: 100%;"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Отзывы -->
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-chat-quote me-2"></i> Отзывы
                                </h5>
                                <button class="btn btn-sm btn-primary" @onclick="ShowAddReviewForm">
                                    <i class="bi bi-plus-circle me-1"></i> Добавить отзыв
                                </button>
                            </div>

                            <!-- Форма добавления отзыва (скрыта по умолчанию) -->
                        @if (showAddReviewForm)
                        {
                                    <div class="card-body border-bottom">
                                        <h6 class="mb-3">Добавить отзыв</h6>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Ваше имя *</label>
                                                <input type="text" class="form-control" @bind="newReview.UserName" />
                                        @if (!string.IsNullOrEmpty(reviewError))
                                        {
                                                        <div class="text-danger small">@reviewError</div>
                                        }
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="form-label">Рейтинг *</label>
                                                <div class="rating-stars">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                            <button type="button" class="btn btn-link p-0 me-1"
                                                                    @onclick="() => SetRating(i)">
                                                                <i class="bi @(i <= newReview.Rating ? "bi-star-fill text-warning" : "bi-star") fs-4"></i>
                                                            </button>
                                            }
                                                    <span class="ms-2">@newReview.Rating / 5</span>
                                                </div>
                                            </div>
                                            <div class="col-12 mb-3">
                                                <label class="form-label">Комментарий *</label>
                                                <textarea class="form-control" rows="3" @bind="newReview.Comment"></textarea>
                                            </div>
                                            <div class="col-12">
                                                <button class="btn btn-primary me-2" @onclick="AddReview">
                                                    <i class="bi bi-check-circle me-1"></i> Опубликовать
                                                </button>
                                                <button class="btn btn-outline-secondary" @onclick="CancelAddReview">
                                                    <i class="bi bi-x-circle me-1"></i> Отмена
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                        }

                            <!-- Список отзывов -->
                            <div class="card-body">
                            @if (!tour.Reviews.Any())
                            {
                                        <div class="text-center py-4">
                                            <i class="bi bi-chat-text fs-1 text-muted mb-3"></i>
                                            <p class="text-muted">Пока нет отзывов. Будьте первым!</p>
                                        </div>
                            }
                            else
                            {
                                foreach (var review in tour.Reviews.OrderByDescending(r => r.CreatedAt))
                                {
                                                <div class="border-bottom pb-3 mb-3">
                                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                                        <div>
                                                            <h6 class="mb-0 fw-bold">@review.UserName</h6>
                                                            <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                                        </div>
                                                        <div class="text-warning">
                                                @for (int i = 0; i < 5; i++)
                                                {
                                                                    <i class="bi @(i < review.Rating ? "bi-star-fill" : "bi-star")"></i>
                                                }
                                                        </div>
                                                    </div>
                                                    <p class="mb-0">@review.Comment</p>
                                                </div>
                                }
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}

<!-- Модальное окно подтверждения удаления -->
@if (showDeleteModal)
{
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5)">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Подтверждение удаления</h5>
                        <button type="button" class="btn-close" @onclick="HideDeleteConfirmation"></button>
                    </div>
                    <div class="modal-body">
                        <p>Вы уверены, что хотите удалить тур <strong>@tour?.Name</strong>?</p>
                        <p class="text-danger">Это действие нельзя отменить!</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="HideDeleteConfirmation">
                            Отмена
                        </button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteTour">
                            <i class="bi bi-trash me-1"></i> Удалить
                        </button>
                    </div>
                </div>
            </div>
        </div>
}

@code {
    [Parameter] public int Id { get; set; }

    private Tour? tour;
    private bool showAddReviewForm = false;
    private bool showDeleteModal = false;
    private Review newReview = new();
    private string mapId = "tourMap";
    private bool isMapInitialized = false;
    private string reviewError = string.Empty;

    protected override void OnInitialized()
    {
        tour = TourService.GetTourById(Id);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && tour != null && tour.Places.Any() && !isMapInitialized)
        {
            await InitializeMap();
            isMapInitialized = true;
        }
    }

    private async Task InitializeMap()
    {
        try
        {
            if (tour == null || !tour.Places.Any()) return;

            // Получаем средние координаты для центра карты
            var avgLat = tour.Places.Average(p => p.Latitude);
            var avgLng = tour.Places.Average(p => p.Longitude);

            // Инициализируем карту через JS жава скрипт
            await JSRuntime.InvokeVoidAsync("mapFunctions.initMap", mapId, avgLat, avgLng, 13);

            // Добавляем маркеры для всех мест
            foreach (var place in tour.Places)
            {
                await JSRuntime.InvokeVoidAsync("mapFunctions.addMarker",
                    mapId, place.Latitude, place.Longitude, place.Name, place.Description);
            }

            // Увеличиваем карту для лучшего отображения всех маркеров
            await JSRuntime.InvokeVoidAsync("mapFunctions.fitBounds", mapId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при инициализации карты: {ex.Message}");
        }
    }

    private async Task FlyToLocation(double lat, double lng)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("mapFunctions.flyTo", mapId, lat, lng, 15);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при перемещении карты: {ex.Message}");
        }
    }

    private async Task ZoomIn()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("mapFunctions.zoomIn", mapId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при увеличении: {ex.Message}");
        }
    }

    private async Task ZoomOut()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("mapFunctions.zoomOut", mapId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при уменьшении: {ex.Message}");
        }
    }

    private async Task ResetView()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("mapFunctions.resetView", mapId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при сбросе вида: {ex.Message}");
        }
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteModal = true;
        StateHasChanged();
    }

    private void HideDeleteConfirmation()
    {
        showDeleteModal = false;
        StateHasChanged();
    }

    private void DeleteTour()
    {
        if (tour != null)
        {
            TourService.DeleteTour(tour.Id);
            Navigation.NavigateTo("/tours");
        }
    }

    private void ShowAddReviewForm()
    {
        showAddReviewForm = true;
        newReview = new Review();
        reviewError = string.Empty;
        StateHasChanged();
    }

    private void CancelAddReview()
    {
        showAddReviewForm = false;
        newReview = new Review();
        reviewError = string.Empty;
        StateHasChanged();
    }

    private void SetRating(int rating)
    {
        newReview.Rating = rating;
        StateHasChanged();
    }

    private void AddReview()
    {
        if (string.IsNullOrWhiteSpace(newReview.UserName) ||
            string.IsNullOrWhiteSpace(newReview.Comment))
        {
            reviewError = "Заполните все обязательные поля";
            return;
        }

        TourService.AddReview(Id, newReview);
        showAddReviewForm = false;
        reviewError = string.Empty;

        // Обновляем данные тура
        tour = TourService.GetTourById(Id);
        StateHasChanged();
    }
}